#bg {
  background-image: url('maze-bg.jpg');
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
}

body {
  font-family: 'Lato', sans-serif;
  color: #4A4A4A;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  overflow: hidden;
  margin: 0;
  padding: 0;
}

form {
  width: 350px;
  
}

.container{
	position:absolute;
	right:500;
